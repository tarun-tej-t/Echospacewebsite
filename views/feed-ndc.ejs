    <style>
        details[data-popover] {
            display: inline;
            position: relative;
        }
        
        details[data-popover]>summary:focus {
            outline: none;
        }
        
        details[data-popover]>summary::-webkit-details-marker {
            display: none;
        }
        
        details[data-popover]>summary {
            list-style: none;
            text-decoration: underline dotted #006B96;
        }
        
        details[data-popover]>summary+* {
            position: absolute;
            display: block;
            z-index: 1;
            width: 45vw;
            border: solid 1px #006B96;
            border-radius: 5%;
            padding: 10px;
            background: white;
        }
        
        details[data-popover]>*+* {
            /* hide detail elements that would ruin the popover */
            display: none;
        }
        
        details[data-popover="up"]>summary+* {
            bottom: calc(0.5rem + 100%);
            right: 50%;
            transform: translateX(50%);
        }
        
        details[data-popover="down"]>summary+* {
            top: calc(0.5rem + 100%);
            right: 50%;
            transform: translateX(50%);
        }
        
        details[data-popover="left"]>summary+* {
            right: calc(1rem + 100%);
            bottom: 50%;
            transform: translateY(50%);
        }
        
        details[data-popover="right"]>summary+* {
            left: calc(0.3rem + 100%);
            bottom: 50%;
            transform: translateY(50%);
        }
        /* wrapper setup */
        
        .wrapper {
            width: 100%;
        }
        
        .comment {
            width: 100%;
            margin-top: 50px;
            background-color: white;
            display: flex;
            justify-content: center;
            border: 2px solid black;
        }
        
        .card {
            border: none;
            border-radius: 4px;
            background-color: #cbd6dd;
            margin-bottom: 8px;
        }
        
        .user-img {
            margin-top: 4px;
        }
        
        .reply small {
            user-select: none;
        }
        
        .reply small:hover {
            color: green;
            cursor: pointer
        }
        
        .divide {
            display: flex;
            justify-content: space-between;
        }
        
        .show-comments {
            text-decoration: underline;
            cursor: pointer;
            user-select: none;
        }
        
        .show-comments:hover {
            color: green;
        }
        
        .comment-section {
            flex-direction: column;
        }
        
        .textarea {
            resize: none;
            margin-bottom: 10px;
        }
        
        .cursor:hover {
            color: blue
        }
        
        .cursor {
            cursor: pointer
        }
        
        .reply-section {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: left;
        }
    </style>

