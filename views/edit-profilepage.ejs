<%- include("partials/headerlogout") %>
<div>
  <div class="container-fluid">
    <h2 class="text-center">Edit your profile</h2>
    <br />
    <div class="container border" style="background-color: #F3F3F3; height: 95vh;">
      <form action="/profiledit/profiledata" method="POST">
        <div class="form-group text-center">
          <h4>Tell Something about yourself: </h4> 
          <textarea  class="form-control" name="description" rows="5" cols="30" style="margin-bottom: 10px"><%- data[0].description %></textarea>
        </div>
        <div class="form-group text-center">
          <h4>City/Village/Town name: </h4> 
          <input class="form-control" type="text" name="city" value=" <%- data[0].city %>" style="margin-bottom: 10px">
        </div>
        <div class="form-group text-center">
          <h4>Contact Information: </h4> 
          <input class="form-control" type="text" name="phone" value=" <%- data[0].phone %>" style="margin-bottom: 10px">
        </div>
        
        <div class="form-group text-center">
              <button type="submit" class="btn btn-outline-primary" style="margin-bottom: 10px">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>


<%- include("partials/footer") %>