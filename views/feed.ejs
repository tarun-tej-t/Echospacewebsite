    <style>
        .comment {
            width: 100%;
            margin-top: 50px;
            background-color: white;
            display: flex;
            justify-content: center;
            border: 2px solid black;
        }
        
        .card {
            border: none;
            border-radius: 4px;
            background-color: #cbd6dd;
            margin-bottom: 8px;
        }
        
        .user-img {
            margin-top: 4px;
        }
        
        .reply small {
            color: #b7b4b4;
            user-select: none;
        }
        
        .reply small:hover {
            color: green;
            cursor: pointer
        }
        
        .divide {
            display: flex;
            justify-content: space-between;
        }
        
        .show-comments {
            text-decoration: underline;
            cursor: pointer;
            user-select: none;
        }
        
        .show-comments:hover {
            color: green;
        }
        
        .comment-section {
            flex-direction: column;
        }
        
        .textarea {
            resize: none;
            margin-bottom: 10px;
        }
        
        .cursor:hover {
            color: blue
        }
        
        .cursor {
            cursor: pointer
        }
        
        .reply-section {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: left;
        }
        
        .dots {
            height: 4px;
            width: 4px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block
        }
        
        button,
        input[type="submit"] {
            background: none;
            color: inherit;
            border: none;
            padding: 0;
            font: inherit;
            cursor: pointer;
            outline: inherit;
        }
    </style>

